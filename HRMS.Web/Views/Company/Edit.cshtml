@model HRMS.Web.Models.CompanyViewModel

@{
    ViewData["Title"] = "Edit";
}

<partial name="_header" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="Id" hidden class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NIPT" class="control-label"></label>
                <input asp-for="NIPT" class="form-control" />
                <span asp-validation-for="NIPT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Delete" asp-route-id="@Model.Id" data-toggle="modal" data-target="#confirm-delete" class="btn btn-danger delete">Delete </a>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Delete Item
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>

<div class="list-header"></div>
<div class="row ">
    <div class="col-md-11">
        <h3 class="d-inline">Sites of Company </h3>
    </div>
    <div class="col-md-1">
        <a data-toggle="modal" data-target="#add-site-modal" class="btn btn-success">Add</a>
    </div>
</div>
<hr />
<div class="list-header"></div>


<div class="row">
    <div class="col-md-12">
        <table class="table display">
            <thead>
                <tr>
                    <th>
                        Site
                    </th>
                    <th>
                        Country
                    </th>
                    <th>
                        Region
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Postal Code
                    </th>
                    <th class="no-sort">Actions</th>
                </tr>
            <tbody></tbody>
        </table>
    </div>


</div>


<div class="list-header"></div>
<div class="row">
    <div class="col-md-10">
        <h3 class="d-inline">Organigram of Company </h3>
    </div>
    <div class="col-md-2">
        <a asp-action="Create" asp-controller="Organigram" asp-route-companyId="@Model.Id" class="btn btn-success">Add</a>
        <a asp-action="Index" asp-controller="Organigram" asp-route-companyId="@Model.Id" class="btn btn-success">List</a>
    </div>
</div>
<hr />
<div class="list-header"></div>
<div class="row">
    <div class="col-md-12">
        <div id="chart-container"></div>

    </div>
</div>

<div class="modal" id="add-site-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Site</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="form-group">
                            <label id="ModalErrorMessage" class="alert-danger"> this is a error </label>
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Site:</label>
                            <select id="newSite" class="form-control col-10"></select>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="confirmAddSite" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="remove-site-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Remove Site</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label id="RemoveModalErrorMessage" class="alert-danger"> this is a error </label>
                    </div>
                    <div class="form-group">
                        Are you sure you want to remove this site ?
                    </div>

                </form>
            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="confirmRemoveSite" class="btn btn-danger">Remove</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(function () {


            $('#confirm-delete').on('show.bs.modal', function (e) {
                $(".modal-body").empty().html(" Are you sure you want to delete this item ?");
               var url= $(e.relatedTarget).attr('href');
                $(this).find('.btn-ok').attr('href',url);
            });

            $(".btn-ok").on("click", function (event) {
                event.preventDefault();
                var url = $(this).attr("href");
                $.ajax
                    ({
                        type: "POST",
                        url: url,
                        success: function (data) {
                            console.log(data);
                            if (data.isSuccessful) {
                                 window.location.href='@Url.Action("Index")';
                            }
                            else {
                                $(".modal-body").empty().html(data.errorMessage);
                            }
                        }
                    });
                return false;
            });

        var table = $(".table").DataTable({
                ajax: {
                    url:"@Url.Action("LinkedSites","Company",new { id=Model.Id})",
                    dataSrc: 'items'
                } ,
                "columns": [
                    { "data": "name" },
                    { "data": "country" },
                    { "data": "region" },
                    { "data": "city" },
                    { "data": "postalCode" },
                    {
                        "data": "id"
                    }
                ]

                , "columnDefs": [{ targets: 'no-sort', orderable: false },

                    {
                        targets: 5, render: function (data) {
                            return '<button  type="button" data-site-id="' + data +'"  class="btn btn-primary detailSite">Details</button>'+" "+'<button  type="button" data-site-id="'+data+'"  class="btn btn-danger removeLinkedSite">Remove Site</button>'
                        }
                    }
                ]
            });

            $('#newSite').select2({
                placeholder: 'Select an option',
                dropdownParent: $('#add-site-modal'),
                width: '100%',
                ajax: {
                    url: '@Url.Action("GetSites", "Json")',
                    data: function (params) {
                        var query = {
                            search: params.term,
                            page: params.page || 1,
                            companyId:'@Model.Id'
                        }
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: data.items
                        };
                    }
                }
            });

            $('#add-site-modal').on('shown.bs.modal', function (e) {
                $("#ModalErrorMessage").hide();
            })


            $("#confirmAddSite").on("click", function () {

              var companyId = "@Model.Id";
              var siteId = $('#newSite').val();

              $.ajax({
                        type: "Post",
                        url: '@Url.Action("LinkSite")',
                        data: {
                                         id: companyId,
                                         siteId:siteId
                        },
                        success: function (data) {
                                        console.log(data);
                                        if (data.isSuccessful) {

                                                        $("#add-site-modal").modal('hide');
                                                        table.ajax.reload();
                                         }
                                        else {
                                            $("#ModalErrorMessage").empty().html(data.errorMessage).show();
                                        }
                        },
                        error: function (e) {
                            console.log(e);
                        }
              });

            });
            $(".table").on("click", ".detailSite", function (e) {
                var siteId = $(this).attr("data-site-id");
                console.log(siteId);

                window.location.href = '@Url.Action("Details", "CompanySite")' + "?id=" + siteId;
            });


            $(".table").on("click",".removeLinkedSite", function (e) {
                var siteId = $(this).attr("data-site-id");
                console.log(siteId);

                $("#confirmRemoveSite").attr("data-site-id", siteId);
                $("#RemoveModalErrorMessage").hide();
                $('#remove-site-modal').modal("show");
            });

            $("#confirmRemoveSite").on("click", function (event) {
                event.preventDefault();

                var id = $(this).attr("data-site-id");

                $.ajax
                    ({
                        type: "POST",
                        url: "@Url.Action("RemoveLinkedSite")",
                        data: {
                            id: id
                        },
                        success: function (data) {
                            console.log(data);
                            if (data.isSuccessful) {
                                $("#remove-site-modal").modal('hide');
                                table.ajax.reload();
                            }
                            else {
                                $("#RemoveModalErrorMessage").empty().html(data.errorMessage).show();
                            }
                        }
                    });
                return false;
            });

        });

    </script>

    <link rel="stylesheet" href="~/css/font-awesome.css">
    <link rel="stylesheet" href="~/css/jquery.orgchart.css">

    <script src="~/js/html2canvas.js"></script>
    <script src="~/js/jquery.orgchart.js"></script>
    <script>
        $(function () {
           
             $.ajax({
                        type: "GET",
                        url: "@Url.Action("GetCompanyOrganigrams", "Json",new { companyId=Model.Id})",
                        success: function (data) {
                            console.log(data);
                                 $('#chart-container').orgchart({
                                    'data': data.items[0],
                                    'nodeTitle': 'title',
                                    'nodeContent': 'name'
                            });
                        }
                    });

        });

    </script>
}

