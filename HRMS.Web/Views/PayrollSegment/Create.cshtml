@model HRMS.Web.Models.SegmentViewModel

@{
    ViewData["Title"] = "Create";
}

<partial name="_header" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nr" class="control-label"></label>
                <input asp-for="Nr" class="form-control" />
                <span asp-validation-for="Nr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayrollSeason" class="control-label"></label>
                <select asp-for="PayrollSeasonId" class="form-control selectAdd">
                    <option selected value="@Model.PayrollSeasonId">@Model.PayrollSeason</option>
                </select>
                <span asp-validation-for="PayrollSeasonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>




@section Scripts{


    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {
              $('#PayrollSeasonId').select2({
                        placeholder: 'Select an option',
                        ajax: {
                                url: '@Url.Action("GetPayrollSeasons", "Json")',
                                data: function (params) {
                                    var query = {
                                        search: params.term,
                                        page: params.page || 1
                                    }
                                    return query;
                                },
                                processResults: function (data) {
                                    return {
                                        results: data.items
                                    };
                                }
                        }
                 });
        });

    </script>
}


